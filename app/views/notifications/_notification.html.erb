<% cache notification do %>
  <article class="notification" id="<%= dom_id(notification) %>">
    <h1><%= notification.name %></h1> - <p><%= notification.created_at %></p>
    <p><%= notification.body %></p>
    <%# Simulate a template taking at least 30 milliseconds to render %>
    <%= sleep(0.03) %>
  </article>
<% end %>
